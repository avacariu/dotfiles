path_exists VPN {
        path = "/proc/sys/net/ipv4/conf/tun0"
        format = "VPN"
        format_down = ""
}

path_exists HE {
        path = "/sys/class/net/he-ipv6"
        format = "HE"
        format_down = ""
}

